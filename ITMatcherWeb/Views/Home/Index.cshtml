@model ITMatcherWeb.Models.RegisterViewModel

@using ITMatcherWeb.Models


<!DOCTYPE html>

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.css" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />


<style>
    body, h1, h2, h3, h4, h5, h6 {
        font-family: "Lato", sans-serif;
    }

    body, html {
        height: 100%;
        color: #777;
        line-height: 1.8;
    }

    /* Create a Parallax Effect */
    .bgimg-1, .bgimg-2, .bgimg-3 {
        background-attachment: fixed;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }

    /* First image (Logo. Full height) */
    .bgimg-1 {
        background-image: url('../../Content/Images/business-3141342_1920.jpg');
        min-height: 100vh;
    }

    /* Second image (Portfolio) */
    .bgimg-2 {
        background-image: url('../../Content/Images/Karts.jpg');
        min-height: 400px;
    }

    /* Third image (Contact) */
    .bgimg-3 {
        background-image: url('../../Content/Images/Kid.jpg');
        min-height: 400px;
    }

    .w3-wide {
        letter-spacing: 10px;
    }

    .w3-hover-opacity {
        cursor: pointer;
    }

    input {
        border-radius: 5px;
    }
</style>




<html>
<body>

    <!-- First Parallax Image with Logo Text -->
    <div class="bgimg-1 w3-display-container w3-opacity-min" id="home">
        <div class="w3-display-middle" style="white-space:nowrap;">
            <span class="w3-center w3-padding-large w3-black w3-xlarge w3-wide w3-animate-opacity">IT matcher</span>
        </div>
    </div>


    <!--Registration area-->
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "Register" }))
    {
        <div align="center" class="w3-black w3-opacity" id="register">
            <br />
            @Html.AntiForgeryToken()
            <h4>Register</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group" id="lastname">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <button class="w3-button w3-light-grey w3-section" type="button" value="Register" id="submitBtn" data-toggle="modal" data-target="#confirm-submit">
                    <i class="fa fa-user"></i>Create user
                </button>
            </div>
        </div>
    }


    <!--legal data-stuff-->
    <div class="modal fade" id="confirm-submit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header w3-center">
                    <h1>Before you create your user</h1>
                </div>
                <div class="modal-body scroll">
                    Some stuff from database
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus porta, sapien ac hendrerit vehicula, neque massa aliquet augue, nec aliquet tellus eros sit amet orci. Interdum et malesuada fames ac ante ipsum primis in faucibus. Aenean porttitor sapien vel ligula tincidunt euismod.
                    Duis tempus urna sed magna vulputate, in pretium nulla laoreet. Nam consectetur lectus nec lectus viverra, vel pharetra lectus condimentum. Interdum et malesuada fames ac ante ipsum primis in faucibus.
                    Donec dapibus, metus eu lobortis ornare, nisi purus tempor neque, et sagittis justo felis eu arcu. Donec eu accumsan nunc. Duis interdum, turpis nec ullamcorper vehicula, purus elit laoreet augue, in lobortis elit quam vel odio.
                    Praesent maximus ac purus vitae pellentesque. Cras sem dolor, porta sit amet sodales sed, tristique sed odio. Vivamus lobortis vestibulum mi vel dapibus. Donec rhoncus lorem sit amet efficitur vestibulum.
                    Maecenas faucibus ipsum ullamcorper elit commodo venenatis. Suspendisse ac tincidunt lectus. Interdum et malesuada fames ac ante ipsum primis in faucibus. Nulla vestibulum felis nec nibh vulputate aliquet.
                    Ut rhoncus gravida consequat. Praesent tristique dui eu rhoncus laoreet. Cras accumsan urna id neque tincidunt interdum. Nam in imperdiet purus, ut consectetur ante. Vivamus varius nisi non velit malesuada, a suscipit orci porta.
                    Etiam pulvinar tincidunt ornare. Nunc tincidunt, risus vel blandit lobortis, eros arcu suscipit risus, ut lobortis est lorem sed arcu. Suspendisse eget facilisis ligula.
                    Vivamus fermentum aliquam porttitor. Aenean quis purus sed justo posuere consectetur non vitae nisl. Praesent eu sem a eros porta ultrices. Fusce imperdiet sed eros quis suscipit.
                    Ut non lacus in odio convallis suscipit. Cras et sem massa. Mauris porttitor ipsum libero. Ut vehicula maximus dui eu gravida. Integer ullamcorper nulla vitae massa efficitur, eu volutpat nunc rutrum.
                    Nulla id viverra arcu. Nulla eu pretium nunc. Nullam finibus scelerisque tincidunt.
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <a href="#" id="submitBtn2" class="btn btn-success success">Submit</a>
                </div>
            </div>
        </div>
    </div>


    <!--login modal-->
    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4>Log in</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <section id="loginForm">
                                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Log in" class="btn btn-default" />
                                        </div>
                                    </div>
                                }
                            </section>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Container (About Section) -->
    <div class="w3-content w3-container w3-padding-64" id="about">
        <h3 class="w3-center">About IT matcher</h3>
        <p>
            IT matcher er et konsulentbureau, som leverer konsulentydelser inden for Test, IT-systemudvikling og IT-Projektledelse. Vi tilbyder jobrekruttering, men varetager hovedsageligt salg af konsulenter på langtidskontrakter.
            Gennem kontrakterne sikrer vi, at vore kunder får en ellers uopnåelig leverancesikkerhed. Vores netværk består naturligvis af kunder, men også af en lang række selvstændige erhvervs-
            drivende IT-konsulenter. IT matcher samler trådene, så opgaverne løftes af de rette hænder. IT matcher har flere års erfaring i udvælgelse af de rette ressourcer til en given opgave i et givent miljø.
            Denne erfaring stilles til rådighed for både kunder og konsulenter og giver dermed alle parter de bedste betingelser for et succesfyldt samarbejde. Det er IT matcher´s klare målsætning at være det foretrukne konsulentbureau for både kunder og freelancekonsulenter
        </p>

        <div class="w3-row">
            <div class="w3-col m6 w3-center w3-padding-large">
                <p><b><i class="fa fa-user w3-margin-right"></i>Founder</b></p><br>
                <img src="~/Content/Images/Kid.jpg" class="w3-round w3-image w3-opacity w3-hover-opacity-off" alt="Founder" width="500" height="333">
            </div>

            <!-- Hide this text on small devices -->
            <div class="w3-col m6 w3-hide-small w3-padding-large">
                <p>
                    Per Bengtsen is the founder and CEO of IT matcher. Per has been working with IT since 1984 and has specifically worked with selection of staff since 1997. IT matcher ApS was created on the 1st of January 2000.
                </p>
            </div>
        </div>

        <div class="w3-row w3-center w3-dark-grey w3-padding-16">
            <div class="w3-quarter w3-section">
                <span class="w3-xlarge">
                @ViewBag.numberOfProjectMangers 
                </span><br>
                Projektledere
            </div>
            <div class="w3-quarter w3-section">
                <span class="w3-xlarge">
                    @ViewBag.numberOfTestManagers
                </span><br>
                Test-managere
            </div>
            <div class="w3-quarter w3-section">
                <span class="w3-xlarge">
                    @ViewBag.numberOfSystemDev
                </span><br>
                Systemudviklere
            </div>
            <div class="w3-quarter w3-section">
                <span class="w3-xlarge">
                    @ViewBag.numberOfTesters
                </span><br>
                Testere
            </div>
        </div>
    </div>


    <!-- Second Parallax Image with Portfolio Text -->
    <div class="bgimg-2 w3-display-container w3-opacity-min">
        <div class="w3-display-middle">
            <span class="w3-xxlarge w3-text-white w3-wide">PORTFOLIO</span>
        </div>
    </div>

    <!-- Container (Portfolio Section) -->
    <div class="w3-content w3-container w3-padding-64" id="portfolio">
        <h3 class="w3-center">MY WORK</h3>
        <p class="w3-center"><em>Here are some of my latest lorem work ipsum tipsum.<br> Click on the images to make them bigger</em></p><br>

        <!-- Responsive Grid. Four columns on tablets, laptops and desktops. Will stack on mobile devices/small screens (100% width) -->
        <div class="w3-row-padding w3-center">
            <div class="w3-col m3">
                <img src="/w3images/p1.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="The mist over the mountains">
            </div>

            <div class="w3-col m3">
                <img src="/w3images/p2.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Coffee beans">
            </div>

            <div class="w3-col m3">
                <img src="/w3images/p3.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Bear closeup">
            </div>

            <div class="w3-col m3">
                <img src="/w3images/p4.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Quiet ocean">
            </div>
        </div>

        <div class="w3-row-padding w3-center w3-section">
            <div class="w3-col m3">
                <img src="/w3images/p5.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="The mist">
            </div>

            <div class="w3-col m3">
                <img src="/w3images/p6.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="My beloved typewriter">
            </div>

            <div class="w3-col m3">
                <img src="/w3images/p7.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Empty ghost train">
            </div>

            <div class="w3-col m3">
                <img src="/w3images/p8.jpg" style="width:100%" onclick="onClick(this)" class="w3-hover-opacity" alt="Sailing">
            </div>
        </div>
        <div class="w3-center">
            <button class="w3-button w3-black w3-section" style="margin-top:64px"> LOAD MORE </button>
        </div>
    </div>

    <!-- Modal for full size images on click-->
    <div id="modal01" class="w3-modal w3-black" onclick="this.style.display='none'">
        <span class="w3-button w3-large w3-black w3-display-topright" title="Close Modal Image"><i class="fa fa-remove"></i></span>
        <div class="w3-modal-content w3-animate-zoom w3-center w3-transparent w3-padding-64">
            <img id="img01" class="w3-image">
            <p id="caption" class="w3-opacity w3-large"></p>
        </div>
    </div>

    <!-- Third Parallax Image with Portfolio Text -->
    <div class="bgimg-3 w3-display-container w3-opacity-min">
        <div class="w3-display-middle">
            <span class="w3-xxlarge w3-text-white w3-wide">CONTACT</span>
        </div>
    </div>

    <!-- Container (Contact Section) -->
    <div class="w3-content w3-container w3-padding-64" id="contact">
        <h3 class="w3-center">WHERE I WORK</h3>
        <div class="w3-large w3-margin-bottom w3-center">
            <i class="fa fa-map-marker fa-fw w3-hover-text-black w3-xlarge w3-margin-right"></i> Vedbæk, Denmark<br>
            <i class="fa fa-phone fa-fw w3-hover-text-black w3-xlarge w3-margin-right"></i> Phone: +45 50513351<br>
            <i class="fa fa-envelope fa-fw w3-hover-text-black w3-xlarge w3-margin-right"></i> Email: per.bengtsen@it-matcher.dk<br>
        </div>
        <!-- Google maps-->
        <div id="googleMap" class="w3-round-large w3-greyscale" style="width:100%;height:400px;"></div>
        <footer class="w3-center w3-black w3-padding-32 w3-opacity">
            <a href="#home" class="w3-button w3-light-grey"><i class="fa fa-arrow-up w3-margin-right"></i>To the top</a>
        </footer>
    </div>



    @section Scripts
    {
        <!-- Footer -->
        <!-- Add Google Maps -->
        <script>


            function myMap() {
                myCenter = new google.maps.LatLng(55.8419488, 12.5365159);
                var mapOptions = {
                    center: myCenter,
                    zoom: 12, scrollwheel: false, draggable: false,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                };
                var map = new google.maps.Map(document.getElementById("googleMap"), mapOptions);

                var marker = new google.maps.Marker({
                    position: myCenter,
                });
                marker.setMap(map);
            }

            // Modal Image Gallery
            function onClick(element) {
                document.getElementById("img01").src = element.src;
                document.getElementById("modal01").style.display = "block";
                var captionText = document.getElementById("caption");
                captionText.innerHTML = element.alt;
            }

        </script>

        <!--Cookie consent-->
        <script src="//cdnjs.cloudflare.com/ajax/libs/cookieconsent2/3.0.3/cookieconsent.min.js"></script>

        
        <script>
            $('#submitBtn2').click(function () {
                $('#Register').submit();
            });
        </script>

        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAlh1E_8qrTQZgqworxPx4C2pGuKzTCXLQ&callback=myMap"></script>

        <!--Cookie Concent-->
        <script>
            window.addEventListener("load", function () {
                window.cookieconsent.initialise({
                    "palette": {
                        "popup": {
                            "background": "#252e39"
                        },
                        "button": {
                            "background": "#14a7d0"
                        }
                    },
                    "theme": "edgeless"
                })
            });
        </script>

    }




</body>
</html>
