@model IEnumerable<ITMatcherWeb.Models.Title>

@{
    ViewBag.Title = "TitlesList";
}

<h2>TitlesList</h2>

@{int titlId = ViewBag.TitleId; }


<p>
    @Html.ActionLink("Create New", "Create", new { id = titlId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TitleName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TitleId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TitleId })
            </td>
        </tr>
    }

</table>
