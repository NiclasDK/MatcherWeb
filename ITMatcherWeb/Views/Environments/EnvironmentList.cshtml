@model IEnumerable<ITMatcherWeb.Models.Environment>

@{
    ViewBag.Title = "EnvironmentList";
}

<h2>EnvironmentList</h2>

@{int jobExpId = ViewBag.jobExperienceId;
}

<p>
    @Html.ActionLink("Create New", "Create", new { id = jobExpId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EnvironmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAccepted)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EnvironmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAccepted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EnvironmentId }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnvironmentId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnvironmentId })
            </td>
        </tr>
    }

</table>
