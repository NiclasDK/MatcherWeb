@model IEnumerable<ITMatcherWeb.Models.User>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Profile</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link href="~/Content/profilePageSheet.css" rel="stylesheet" />
</head>
<body>

    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <!--<li><a href="LogInbtn" data-toggle="modal" data-target="#myModal">log in</a></li>-->
                <li><a href="">Profile</a></li>
                <li>
                    @Html.ActionLink("Job experience", "ProfileJobIndex", "JobExperiences", new { @class = "elements" }, null)
                </li>
                <li>
                    @Html.ActionLink("Edit user", "Index", "Manage", new { @class = "elements" }, null)
                </li>

                @if (Roles.IsUserInRole("Admin3"))
                {
                <li><a href="#">Profile details</a></li>
                <li><a href="#">Userroles</a></li>
                <li><a href="#">Consultants</a></li>                
                }


            </ul>
        </div>

        <!-- Page content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <a href="#" class="btn btn-success" id="menu-toggle">Menu</a>
                        <div>
                            <h1>Profile</h1>
                            <hr />

                            <h3>Ealier jobs</h3>
                            <hr />
                            
                            @if (Model.Any()) {
                                foreach (var i in Model) {
                                    if (i.JobExperiences.Any()) {
                                        foreach (var j in i.JobExperiences)
                                        {
                                    <h3>@j.Employer: period: @j.DateOfEmployment - @j.DateOfExit</h3>
                                        <b>Titles</b>
                                            if (j.Titles.Any() == false)
                                            {
                                            <p>No titles added</p>
                                            }
                                            else
                                            {
                                                foreach (var t in j.Titles)
                                                {
                                            <p>@t.TitleName</p>
                                                }
                                            }
                                            
                                            <b>Subjects</b>

                                            if (j.Subjects.Any() == false)
                                            {
                                            <p>No subjects added - Add subject through "Job Experiences" in menu, then add subject</p>
                                            }
                                            else
                                            {
                                                foreach (var s in j.Subjects)
                                                {
                                                <p>@s.Name</p>
                                                }
                                            }

                                        }
                                    }
                                    else
                                    {
                                        <p>No job experiences added - Go to Job Experiences in menu</p>
                                    }
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu toggle script -->
    <script>
        $("#menu-toggle").click(function (e) {
                                e.preventDefault();
            $("#wrapper").toggleClass("menuDisplayed");
                            });
    </script>

</body>
</html>